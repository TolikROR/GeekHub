<!DOCTYPE html>
<html>
  <head>
    <title>ThreeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Defaul page</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Home</a></li>
            <% if current_user %>
              <li><a href=""><%= current_user.email %></a></li>
              <li><%= link_to 'Sing out', destroy_user_session_path, method: :delete %></li>
              <% if current_admin %>
                <li><%= link_to 'admin', admin_users_path %></li>
              <% end %>
            <% else %>
              <li><%= link_to 'Sing in', new_user_session_path %></li>
              <li><%= link_to 'Sing up', new_user_registration_path %></li>
            <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
