<h1>Admin#Users</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="table">
      <table class="table">
        <thead>
          <tr>
            <th>Email</th>
            <th>Admin</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|  %>
            <tr id = <%= "user_#{user.id}" %>>
              <td><%= user.email %></td>
              <td><%= user.admin %></td>
              <td><%= link_to 'delete', admin_user_path(user), method: :delete, remote: true %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>
