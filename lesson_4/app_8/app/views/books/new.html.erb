<h1>Books#new</h1>
<p>Find me in app/views/books/new.html.erb</p>

<%= form_for @book do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

   <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>

   <p>
    <%= f.label :date %>
    <%= f.text_field :date, :placeholder => 'dd.mm.yyyy' %>
  </p>

  <%= f.submit %>
<% end %>
